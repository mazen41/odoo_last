<odoo>
    <record id="view_engineering_project_document_form" model="ir.ui.view">
        <field name="name">engineering.project.document.form</field>
        <field name="model">engineering.project.document</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_generate_whatsapp_redirect" type="object" string="Send via WhatsApp" class="oe_highlight" icon="fa-whatsapp"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="e.g. Contract - Project X"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="quotation_id"/>
                            <field name="project_id"/>
                            <field name="customer_id"/>
                        </group>
                        <group>
                            <field name="sent_date" readonly="1"/>
                            <field name="sent_by_id" readonly="1"/>
                        </group>
                    </group>
                    <group string="Document File">
                        <field name="pdf_file" filename="pdf_filename"/>
                        <field name="pdf_filename" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_engineering_project_document" model="ir.actions.act_window">
        <field name="name">Project Documents</field>
        <field name="res_model">engineering.project.document</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>