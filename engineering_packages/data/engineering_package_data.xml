<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Basic Package - Residential -->
        <record id="package_residential_basic" model="engineering.package">
            <field name="name">الباقة الأساسية - سكن خاص</field>
            <field name="code">PKG-RES-BASIC</field>
            <field name="package_type">basic</field>
            <field name="building_type">residential</field>
            <field name="sequence">10</field>
            <field name="list_price">1500.0</field>
            <field name="description"><![CDATA[
<div dir="rtl">
    <h4>الباقة الأساسية للسكن الخاص</h4>
    <p>تشمل الخدمات التالية:</p>
    <ul>
        <li>التصميم المعماري</li>
        <li>التصميم الإنشائي</li>
        <li>التصميم الكهربائي</li>
        <li>التصميم الصحي</li>
        <li>استخراج رخصة البناء</li>
    </ul>
</div>
            ]]></field>
        </record>

        <!-- Premium Package - Residential -->
        <record id="package_residential_premium" model="engineering.package">
            <field name="name">الباقة المميزة - سكن خاص</field>
            <field name="code">PKG-RES-PREMIUM</field>
            <field name="package_type">premium</field>
            <field name="building_type">residential</field>
            <field name="sequence">20</field>
            <field name="list_price">2500.0</field>
            <field name="description"><![CDATA[
<div dir="rtl">
    <h4>الباقة المميزة للسكن الخاص</h4>
    <p>تشمل جميع خدمات الباقة الأساسية بالإضافة إلى:</p>
    <ul>
        <li>تصميم الديكور الداخلي</li>
        <li>تصميم المناظر الطبيعية</li>
        <li>الإشراف الهندسي الجزئي</li>
        <li>تصميم نظام التكييف</li>
    </ul>
</div>
            ]]></field>
        </record>

        <!-- Gold Package - Residential -->
        <record id="package_residential_gold" model="engineering.package">
            <field name="name">الباقة الذهبية - سكن خاص</field>
            <field name="code">PKG-RES-GOLD</field>
            <field name="package_type">gold</field>
            <field name="building_type">residential</field>
            <field name="sequence">30</field>
            <field name="list_price">4000.0</field>
            <field name="description"><![CDATA[
<div dir="rtl">
    <h4>الباقة الذهبية للسكن الخاص</h4>
    <p>الباقة الشاملة تتضمن:</p>
    <ul>
        <li>جميع خدمات الباقة المميزة</li>
        <li>الإشراف الهندسي الكامل</li>
        <li>إدارة المشروع</li>
        <li>تصميم الأثاث المخصص</li>
        <li>استشارات التصميم الداخلي</li>
        <li>متابعة التنفيذ حتى التسليم</li>
    </ul>
</div>
            ]]></field>
        </record>

        <!-- Supervision Package - Residential -->
        <record id="package_residential_supervision" model="engineering.package">
            <field name="name">باقة الإشراف - سكن خاص</field>
            <field name="code">PKG-RES-SUPER</field>
            <field name="package_type">supervision</field>
            <field name="building_type">residential</field>
            <field name="sequence">40</field>
            <field name="list_price">2000.0</field>
            <field name="description"><![CDATA[
<div dir="rtl">
    <h4>باقة الإشراف الهندسي</h4>
    <p>تشمل:</p>
    <ul>
        <li>الإشراف على أعمال الحفر والأساسات</li>
        <li>الإشراف على الأعمال الإنشائية</li>
        <li>الإشراف على الأعمال الكهربائية والصحية</li>
        <li>الإشراف على أعمال التشطيبات</li>
        <li>تقارير الزيارات الميدانية</li>
    </ul>
</div>
            ]]></field>
        </record>

        <!-- Investment Building Packages -->
        <record id="package_investment_basic" model="engineering.package">
            <field name="name">الباقة الأساسية - استثماري</field>
            <field name="code">PKG-INV-BASIC</field>
            <field name="package_type">basic</field>
            <field name="building_type">investment</field>
            <field name="sequence">50</field>
            <field name="list_price">3000.0</field>
        </record>

        <record id="package_investment_premium" model="engineering.package">
            <field name="name">الباقة المميزة - استثماري</field>
            <field name="code">PKG-INV-PREMIUM</field>
            <field name="package_type">premium</field>
            <field name="building_type">investment</field>
            <field name="sequence">60</field>
            <field name="list_price">5000.0</field>
        </record>

        <!-- Commercial Building Packages -->
        <record id="package_commercial_basic" model="engineering.package">
            <field name="name">الباقة الأساسية - تجاري</field>
            <field name="code">PKG-COM-BASIC</field>
            <field name="package_type">basic</field>
            <field name="building_type">commercial</field>
            <field name="sequence">70</field>
            <field name="list_price">4000.0</field>
        </record>

        <!-- Industrial Building Packages -->
        <record id="package_industrial_basic" model="engineering.package">
            <field name="name">الباقة الأساسية - صناعي</field>
            <field name="code">PKG-IND-BASIC</field>
            <field name="package_type">basic</field>
            <field name="building_type">industrial</field>
            <field name="sequence">80</field>
            <field name="list_price">5000.0</field>
        </record>

        <!-- Package Features for Basic Residential -->
        <record id="feature_basic_arch" model="engineering.package.feature">
            <field name="package_id" ref="package_residential_basic"/>
            <field name="name">التصميم المعماري</field>
            <field name="included">True</field>
            <field name="sequence">1</field>
        </record>
        <record id="feature_basic_struct" model="engineering.package.feature">
            <field name="package_id" ref="package_residential_basic"/>
            <field name="name">التصميم الإنشائي</field>
            <field name="included">True</field>
            <field name="sequence">2</field>
        </record>
        <record id="feature_basic_elec" model="engineering.package.feature">
            <field name="package_id" ref="package_residential_basic"/>
            <field name="name">التصميم الكهربائي</field>
            <field name="included">True</field>
            <field name="sequence">3</field>
        </record>
        <record id="feature_basic_plumb" model="engineering.package.feature">
            <field name="package_id" ref="package_residential_basic"/>
            <field name="name">التصميم الصحي</field>
            <field name="included">True</field>
            <field name="sequence">4</field>
        </record>
        <record id="feature_basic_permit" model="engineering.package.feature">
            <field name="package_id" ref="package_residential_basic"/>
            <field name="name">استخراج رخصة البناء</field>
            <field name="included">True</field>
            <field name="sequence">5</field>
        </record>
        <record id="feature_basic_interior" model="engineering.package.feature">
            <field name="package_id" ref="package_residential_basic"/>
            <field name="name">تصميم الديكور الداخلي</field>
            <field name="included">False</field>
            <field name="sequence">6</field>
        </record>
        <record id="feature_basic_supervision" model="engineering.package.feature">
            <field name="package_id" ref="package_residential_basic"/>
            <field name="name">الإشراف الهندسي</field>
            <field name="included">False</field>
            <field name="sequence">7</field>
        </record>

    </data>
</odoo>
