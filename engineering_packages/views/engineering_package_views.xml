<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Package Form View -->
    <record id="view_engineering_package_form" model="ir.ui.view">
        <field name="name">engineering.package.form</field>
        <field name="model">engineering.package</field>
        <field name="arch" type="xml">
            <form string="Engineering Package">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_create_product" type="object" class="oe_stat_button" icon="fa-cube">
                            <span>إنشاء منتج</span>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="اسم الباقة"/>
                        </h1>
                    </div>
                    <group>
                        <group string="معلومات الباقة">
                            <field name="code"/>
                            <field name="package_type"/>
                            <field name="building_type"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group string="السعر">
                            <field name="list_price"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="product_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="الوصف (Description)">
                            <field name="description"/>
                        </page>
                        <page string="منتجات الباقة (Bundle Products)">
                            <field name="product_line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="product_uom_id"/>
                                    <field name="price_unit"/>
                                    <field name="subtotal"/>
                                </tree>
                            </field>
                        </page>
                        <page string="مميزات الباقة (Features)">
                            <field name="feature_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="included" widget="boolean_toggle"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Package Tree View -->
    <record id="view_engineering_package_tree" model="ir.ui.view">
        <field name="name">engineering.package.tree</field>
        <field name="model">engineering.package</field>
        <field name="arch" type="xml">
            <tree string="Engineering Packages">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="package_type"/>
                <field name="building_type"/>
                <field name="list_price"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Package Kanban View -->
    <record id="view_engineering_package_kanban" model="ir.ui.view">
        <field name="name">engineering.package.kanban</field>
        <field name="model">engineering.package</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="package_type"/>
                <field name="list_price"/>
                <field name="currency_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_tags_section">
                                    <field name="package_type"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="list_price" widget="monetary"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Package Search View -->
    <record id="view_engineering_package_search" model="ir.ui.view">
        <field name="name">engineering.package.search</field>
        <field name="model">engineering.package</field>
        <field name="arch" type="xml">
            <search string="Search Packages">
                <field name="name"/>
                <field name="code"/>
                <filter string="الباقة الأساسية" name="basic" domain="[('package_type', '=', 'basic')]"/>
                <filter string="الباقة المميزة" name="premium" domain="[('package_type', '=', 'premium')]"/>
                <filter string="الباقة الذهبية" name="gold" domain="[('package_type', '=', 'gold')]"/>
                <separator/>
                <filter string="سكن خاص" name="residential" domain="[('building_type', '=', 'residential')]"/>
                <filter string="استثماري" name="investment" domain="[('building_type', '=', 'investment')]"/>
                <filter string="تجاري" name="commercial" domain="[('building_type', '=', 'commercial')]"/>
                <group expand="0" string="Group By">
                    <filter string="نوع الباقة" name="group_type" context="{'group_by': 'package_type'}"/>
                    <filter string="نوع المبنى" name="group_building" context="{'group_by': 'building_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Package Action -->
    <record id="action_engineering_package" model="ir.actions.act_window">
        <field name="name">الباقات (Packages)</field>
        <field name="res_model">engineering.package</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_engineering_package_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                إنشاء باقة جديدة
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_engineering_packages_root"
              name="الباقات الهندسية (Engineering Packages)"
              web_icon="engineering_packages,static/description/icon.png"
              sequence="24"/>

    <menuitem id="menu_engineering_packages"
              name="الباقات (Packages)"
              parent="menu_engineering_packages_root"
              action="action_engineering_package"
              sequence="10"/>
</odoo>
