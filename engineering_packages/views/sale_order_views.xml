<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend Sale Order Form to add package selection -->
    <record id="view_sale_order_form_inherit_packages" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.packages</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="package_id" options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>
</odoo>
